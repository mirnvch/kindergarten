// DocConnect Platform - Database Schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearchPostgres"]
}

datasource db {
  provider = "postgresql"
}

// ==================== ENUMS ====================

enum UserRole {
  PATIENT // was PARENT
  PROVIDER // was DAYCARE_OWNER
  CLINIC_STAFF // was DAYCARE_STAFF
  ADMIN
}

enum ProviderStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

enum AppointmentType {
  IN_PERSON // was TOUR
  TELEMEDICINE // NEW
}

enum RecurrencePattern {
  NONE
  WEEKLY
  BIWEEKLY
  MONTHLY
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  NO_SHOW
}

enum SubscriptionPlan {
  FREE
  STARTER
  PROFESSIONAL
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  EXPIRED
  TRIALING
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  REFUNDED
}

enum VerificationStatus {
  PENDING
  IN_REVIEW
  APPROVED
  REJECTED
}

enum MessageStatus {
  SENT
  DELIVERED
  READ
}

enum ProviderType {
  DOCTOR
  CLINIC
  HOSPITAL
}

// ==================== AUTH & USERS ====================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  passwordHash  String?
  firstName     String
  lastName      String
  phone         String?
  avatarUrl     String?
  role          UserRole  @default(PATIENT)
  isActive      Boolean   @default(true)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  // Account deletion fields
  deletionRequestedAt DateTime?
  deletionScheduledAt DateTime?
  anonymizedAt        DateTime?

  // Auth relations
  accounts Account[]
  sessions Session[]

  // Patient relations
  familyMembers FamilyMember[]
  appointments  Appointment[]
  reviews       Review[]
  sentMessages  Message[]      @relation("SentMessages")
  favorites     Favorite[]
  savedSearches SavedSearch[]

  // Provider staff relations
  providerStaff ProviderStaff[]

  // Notifications
  notifications          Notification[]
  notificationPreference NotificationPreference?

  // Security relations
  twoFactorAuth      TwoFactorAuth?
  trustedDevices     TrustedDevice[]
  loginAttempts      LoginAttempt[]
  userSessions       UserSession[]
  dataExportRequests DataExportRequest[]

  // Analytics relations
  pageViews       PageView[]
  analyticsEvents AnalyticsEvent[]

  @@index([email])
  @@index([role])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== PATIENT-SPECIFIC ====================

model FamilyMember {
  id           String   @id @default(cuid())
  patientId    String
  firstName    String
  lastName     String
  dateOfBirth  DateTime
  gender       String?
  relationship String // "child", "spouse", "parent", "self"

  // Medical info
  allergies   String?
  medications String?
  conditions  String? @db.Text
  bloodType   String?
  notes       String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  patient      User          @relation(fields: [patientId], references: [id], onDelete: Cascade)
  appointments Appointment[]

  @@index([patientId])
}

// ==================== PROVIDER (was DAYCARE) ====================

model Provider {
  id          String       @id @default(cuid())
  slug        String       @unique
  name        String
  type        ProviderType @default(DOCTOR)
  description String?      @db.Text

  // Professional data (NEW)
  specialty      String? // "Cardiology", "Pediatrics", etc.
  subspecialty   String?
  credentials    String? // "MD", "DO", "NP", etc.
  npi            String? // National Provider Identifier
  education      String?  @db.Text
  experience     Int? // Years of practice
  languages      String[] // ["English", "Spanish"]
  boardCertified Boolean  @default(false)

  // Telemedicine (NEW)
  offersTelehealth   Boolean @default(false)
  teleHealthPlatform String? // "zoom", "doxy.me", etc.

  // Contact
  email   String
  phone   String
  website String?

  // Address
  address String
  city    String
  state   String
  zipCode String
  country String @default("US")

  // Geo coordinates
  latitude  Float
  longitude Float

  // Schedule
  openingTime   String // "07:00"
  closingTime   String // "18:00"
  operatingDays String[] // ["Mon", "Tue", ...]

  // Insurance (NEW)
  acceptedInsurance String[] // ["Aetna", "Blue Cross", "Medicare"]
  acceptsMedicaid   Boolean  @default(false)
  acceptsMedicare   Boolean  @default(false)

  // Pricing (changed)
  consultationFee     Decimal? @db.Decimal(10, 2) // In-person visit fee
  telehealthFee       Decimal? @db.Decimal(10, 2) // Telemedicine fee
  acceptsUninsured    Boolean  @default(false)
  slidingScalePricing Boolean  @default(false)

  // Availability
  acceptingNewPatients Boolean @default(true)
  averageWaitDays      Int? // Average days to get an appointment

  // Status
  status     ProviderStatus @default(PENDING)
  isVerified Boolean        @default(false)
  isFeatured Boolean        @default(false)

  // SEO
  metaTitle       String?
  metaDescription String?

  // Stripe
  stripeAccountId String? @unique
  stripeOnboarded Boolean @default(false)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  // Relations
  staff                ProviderStaff[]
  photos               ProviderPhoto[]
  services             Service[]
  facilities           ProviderFacility[]
  schedule             ProviderSchedule[]
  appointments         Appointment[]
  reviews              Review[]
  messages             MessageThread[]
  messageTemplates     MessageTemplate[]
  subscription         Subscription?
  payments             Payment[]
  waitlist             WaitlistEntry[]
  favorites            Favorite[]
  verificationRequests VerificationRequest[]

  // Analytics relations
  pageViews       PageView[]
  analyticsEvents AnalyticsEvent[]
  dailyAnalytics  DailyAnalytics[]

  @@index([slug])
  @@index([city, state])
  @@index([status])
  @@index([latitude, longitude])
  @@index([specialty])
}

model ProviderStaff {
  id         String  @id @default(cuid())
  providerId String
  userId     String
  role       String // "owner", "manager", "staff", "receptionist"
  isActive   Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, userId])
  @@index([providerId])
  @@index([userId])
}

model ProviderPhoto {
  id         String  @id @default(cuid())
  providerId String
  url        String
  caption    String?
  order      Int     @default(0)
  isPrimary  Boolean @default(false)

  createdAt DateTime @default(now())

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@index([providerId])
}

model Service {
  id           String  @id @default(cuid())
  providerId   String
  name         String // "Annual Physical", "Consultation", etc.
  description  String? @db.Text
  duration     Int // minutes
  price        Decimal @db.Decimal(10, 2)
  isTelehealth Boolean @default(false)
  isActive     Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  provider     Provider      @relation(fields: [providerId], references: [id], onDelete: Cascade)
  appointments Appointment[]

  @@index([providerId])
}

model Facility {
  id       String  @id @default(cuid())
  name     String  @unique
  icon     String?
  category String? // "accessibility", "amenities", "equipment"

  providers ProviderFacility[]
}

model ProviderFacility {
  providerId String
  facilityId String

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  facility Facility @relation(fields: [facilityId], references: [id], onDelete: Cascade)

  @@id([providerId, facilityId])
}

model ProviderSchedule {
  id         String  @id @default(cuid())
  providerId String
  dayOfWeek  Int // 0-6 (Sunday-Saturday)
  openTime   String
  closeTime  String
  isClosed   Boolean @default(false)

  // Telemedicine slots
  telehealthOnly Boolean @default(false)

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@unique([providerId, dayOfWeek])
}

// ==================== APPOINTMENTS (was BOOKINGS) ====================

model Appointment {
  id String @id @default(cuid())

  patientId      String
  providerId     String
  familyMemberId String? // Optional: booking for a family member
  serviceId      String? // Optional: specific service

  type   AppointmentType
  status AppointmentStatus @default(PENDING)

  // Appointment details
  scheduledAt DateTime
  duration    Int // minutes
  notes       String?  @db.Text

  // Telemedicine (NEW)
  isTelemedicine Boolean @default(false)
  meetingUrl     String? // Video call link

  // Reason for visit (NEW)
  reasonForVisit String?
  symptoms       String? @db.Text
  isNewPatient   Boolean @default(true)

  // Recurrence
  recurrence        RecurrencePattern @default(NONE)
  recurrenceEndDate DateTime?
  seriesId          String?

  // Confirmation
  confirmedAt  DateTime?
  cancelledAt  DateTime?
  cancelReason String?

  // Reminders
  reminderSentAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  patient      User          @relation(fields: [patientId], references: [id])
  provider     Provider      @relation(fields: [providerId], references: [id])
  familyMember FamilyMember? @relation(fields: [familyMemberId], references: [id])
  service      Service?      @relation(fields: [serviceId], references: [id])

  @@index([patientId])
  @@index([providerId])
  @@index([status])
  @@index([scheduledAt])
  @@index([seriesId])
  @@index([providerId, status, scheduledAt])
  @@index([createdAt])
}

model WaitlistEntry {
  id             String   @id @default(cuid())
  providerId     String
  patientEmail   String
  patientName    String
  patientPhone   String?
  desiredDate    DateTime
  reasonForVisit String?
  notes          String?
  position       Int

  createdAt  DateTime  @default(now())
  notifiedAt DateTime?

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@index([providerId])
  @@index([providerId, position])
}

// ==================== REVIEWS ====================

model Review {
  id         String @id @default(cuid())
  providerId String
  userId     String

  rating  Int // 1-5
  title   String?
  content String? @db.Text

  // Detailed ratings (changed for medical context)
  communicationRating Int? // 1-5 - How well the doctor explains
  waitTimeRating      Int? // 1-5 - Wait time experience
  staffRating         Int? // 1-5 - Office staff
  facilityRating      Int? // 1-5 - Facility/office
  overallCareRating   Int? // 1-5 - Overall quality of care

  isVerified Boolean @default(false)
  isApproved Boolean @default(true)

  // Response from provider
  response    String?   @db.Text
  respondedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id])

  @@unique([providerId, userId])
  @@index([providerId])
  @@index([rating])
  @@index([createdAt])
}

// ==================== MESSAGING ====================

model MessageThread {
  id         String  @id @default(cuid())
  providerId String
  patientId  String
  subject    String?

  lastMessageAt DateTime?
  isArchived    Boolean   @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  provider Provider  @relation(fields: [providerId], references: [id])
  messages Message[]

  @@unique([providerId, patientId])
  @@index([providerId])
  @@index([patientId])
  @@index([providerId, updatedAt])
}

model Message {
  id       String        @id @default(cuid())
  threadId String
  senderId String
  content  String        @db.Text
  status   MessageStatus @default(SENT)
  isBulk   Boolean       @default(false)

  readAt    DateTime?
  createdAt DateTime  @default(now())

  thread      MessageThread       @relation(fields: [threadId], references: [id], onDelete: Cascade)
  sender      User                @relation("SentMessages", fields: [senderId], references: [id])
  attachments MessageAttachment[]

  @@index([threadId])
  @@index([senderId])
  @@index([threadId, createdAt])
  @@index([readAt])
}

model MessageAttachment {
  id        String   @id @default(cuid())
  messageId String
  url       String
  type      String // image, document, etc.
  name      String
  size      Int?
  createdAt DateTime @default(now())

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([messageId])
}

model MessageTemplate {
  id         String   @id @default(cuid())
  providerId String
  name       String
  content    String   @db.Text
  category   String? // appointment_reminder, follow_up, etc.
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@index([providerId])
  @@index([providerId, category])
}

// ==================== PAYMENTS & SUBSCRIPTIONS ====================

model Subscription {
  id         String @id @default(cuid())
  providerId String @unique

  plan   SubscriptionPlan   @default(FREE)
  status SubscriptionStatus @default(TRIALING)

  // Stripe
  stripeSubscriptionId String? @unique
  stripePriceId        String?
  stripeCustomerId     String?

  // Dates
  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?
  trialEndsAt        DateTime?
  canceledAt         DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@index([status])
}

model Payment {
  id         String @id @default(cuid())
  providerId String

  amount   Decimal       @db.Decimal(10, 2)
  currency String        @default("usd")
  status   PaymentStatus @default(PENDING)

  // Type
  type        String // "consultation", "subscription"
  description String?

  // Stripe
  stripePaymentIntentId String? @unique
  stripeChargeId        String?

  // Commission (for platform)
  platformFee Decimal? @db.Decimal(10, 2)
  netAmount   Decimal? @db.Decimal(10, 2)

  // Dates
  paidAt     DateTime?
  refundedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  provider Provider @relation(fields: [providerId], references: [id])

  @@index([providerId])
  @@index([status])
  @@index([type])
}

// ==================== NOTIFICATIONS ====================

model Notification {
  id     String @id @default(cuid())
  userId String

  type  String // "appointment_confirmed", "message_received", etc.
  title String
  body  String
  data  Json?

  readAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, readAt])
}

model NotificationPreference {
  id     String @id @default(cuid())
  userId String @unique

  emailAppointments Boolean @default(true)
  emailMessages     Boolean @default(true)
  emailMarketing    Boolean @default(false)
  pushEnabled       Boolean @default(false)

  // Appointment reminders
  reminderEmail24h Boolean @default(true)
  reminderSms24h   Boolean @default(false)
  reminderEmail1h  Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ==================== ADMIN ====================

model AuditLog {
  id         String  @id @default(cuid())
  userId     String?
  action     String
  entityType String
  entityId   String
  oldData    Json?
  newData    Json?
  ipAddress  String?
  userAgent  String?

  createdAt DateTime @default(now())

  @@index([entityType, entityId])
  @@index([userId])
  @@index([createdAt])
}

model PlatformSettings {
  id          String  @id @default(cuid())
  key         String  @unique
  value       Json
  description String?

  updatedAt DateTime @updatedAt
}

// ==================== WEBHOOK EVENTS (Idempotency) ====================

model WebhookEvent {
  id          String   @id // Stripe event ID
  type        String
  processedAt DateTime @default(now())

  @@index([processedAt])
}

// ==================== FAVORITES ====================

model Favorite {
  id         String   @id @default(cuid())
  userId     String
  providerId String
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@unique([userId, providerId])
  @@index([userId])
  @@index([providerId])
}

// ==================== SAVED SEARCHES ====================

model SavedSearch {
  id        String   @id @default(cuid())
  userId    String
  name      String
  filters   Json // Stored search filters (specialty, insurance, etc.)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, createdAt])
}

// ==================== VERIFICATION ====================

model VerificationRequest {
  id         String             @id @default(cuid())
  providerId String
  status     VerificationStatus @default(PENDING)

  // Medical license information
  licenseNumber String?
  licenseState  String?
  licenseExpiry DateTime?
  licenseType   String? // "MD", "DO", "NP", "PA"

  // NPI verification
  npiNumber   String?
  npiVerified Boolean @default(false)

  // Board certification
  boardName        String?
  certificationExp DateTime?

  // DEA (for prescriptions)
  deaNumber String?

  // Admin review
  reviewedBy      String?
  reviewedAt      DateTime?
  reviewNotes     String?   @db.Text
  rejectionReason String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  provider  Provider               @relation(fields: [providerId], references: [id], onDelete: Cascade)
  documents VerificationDocument[]

  @@index([providerId])
  @@index([status])
  @@index([createdAt])
}

model VerificationDocument {
  id                    String @id @default(cuid())
  verificationRequestId String

  type     String // "medical_license", "board_certification", "malpractice_insurance", "dea", "photo_id"
  name     String
  url      String
  size     Int?
  mimeType String?

  createdAt DateTime @default(now())

  verificationRequest VerificationRequest @relation(fields: [verificationRequestId], references: [id], onDelete: Cascade)

  @@index([verificationRequestId])
}

// ==================== SECURITY ====================

model TwoFactorAuth {
  id         String    @id @default(cuid())
  userId     String    @unique
  secret     String
  isEnabled  Boolean   @default(false)
  verifiedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  user        User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  backupCodes TwoFactorBackupCode[]
}

model TwoFactorBackupCode {
  id              String    @id @default(cuid())
  twoFactorAuthId String
  code            String
  usedAt          DateTime?
  createdAt       DateTime  @default(now())

  twoFactorAuth TwoFactorAuth @relation(fields: [twoFactorAuthId], references: [id], onDelete: Cascade)

  @@index([twoFactorAuthId])
}

model TrustedDevice {
  id         String   @id @default(cuid())
  userId     String
  deviceHash String
  name       String?
  userAgent  String
  ipAddress  String
  lastUsedAt DateTime @default(now())
  expiresAt  DateTime
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, deviceHash])
  @@index([userId])
  @@index([expiresAt])
}

model LoginAttempt {
  id        String   @id @default(cuid())
  userId    String?
  email     String
  ipAddress String
  userAgent String?
  success   Boolean
  reason    String?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([email])
}

model UserSession {
  id           String    @id @default(cuid())
  userId       String
  tokenHash    String    @unique
  deviceName   String?
  browser      String?
  os           String?
  ipAddress    String
  lastActiveAt DateTime  @default(now())
  isRevoked    Boolean   @default(false)
  revokedAt    DateTime?
  createdAt    DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRevoked])
  @@index([tokenHash])
}

model DataExportRequest {
  id          String    @id @default(cuid())
  userId      String
  status      String    @default("PENDING")
  fileUrl     String?
  expiresAt   DateTime?
  requestedAt DateTime  @default(now())
  completedAt DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
}

// ==================== ANALYTICS ====================

model PageView {
  id         String   @id @default(cuid())
  providerId String
  userId     String?
  sessionId  String
  path       String
  referrer   String?
  source     String?
  userAgent  String?
  ipAddress  String?
  country    String?
  city       String?
  deviceType String?
  duration   Int?
  createdAt  DateTime @default(now())

  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  user     User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([providerId, createdAt])
  @@index([userId])
  @@index([sessionId])
  @@index([source])
  @@index([createdAt])
}

model AnalyticsEvent {
  id         String   @id @default(cuid())
  providerId String?
  userId     String?
  sessionId  String
  eventType  String // "appointment_started", "appointment_completed", "message_sent", "contact_clicked", etc.
  eventData  Json?
  path       String?
  createdAt  DateTime @default(now())

  provider Provider? @relation(fields: [providerId], references: [id], onDelete: Cascade)
  user     User?     @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([providerId, eventType, createdAt])
  @@index([eventType, createdAt])
  @@index([userId])
  @@index([sessionId])
}

model DailyAnalytics {
  id                   String   @id @default(cuid())
  providerId           String?
  date                 DateTime @db.Date
  pageViews            Int      @default(0)
  uniqueVisitors       Int      @default(0)
  appointmentStarts    Int      @default(0)
  appointmentCompletes Int      @default(0)
  messagesSent         Int      @default(0)
  contactClicks        Int      @default(0)
  searchImpressions    Int      @default(0)
  searchClicks         Int      @default(0)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  provider Provider? @relation(fields: [providerId], references: [id], onDelete: Cascade)

  @@unique([providerId, date])
  @@index([date])
}

// ==================== REFERENCE DATA ====================

model Specialty {
  id          String  @id @default(cuid())
  name        String  @unique // "Cardiology", "Pediatrics", etc.
  description String?
  category    String? // "Primary Care", "Specialist", "Surgery", etc.
  icon        String?

  createdAt DateTime @default(now())

  @@index([category])
}

model Insurance {
  id       String  @id @default(cuid())
  name     String  @unique // "Aetna", "Blue Cross Blue Shield", etc.
  type     String? // "national", "regional", "government"
  website  String?
  logoUrl  String?
  isActive Boolean @default(true)

  createdAt DateTime @default(now())

  @@index([type])
}
