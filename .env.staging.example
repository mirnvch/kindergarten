# ========================================
# STAGING ENVIRONMENT
# ========================================
# Copy this to .env.staging and fill in staging-specific values
# Deploy with: vercel --env-file .env.staging

# ========================================
# DATABASE (Supabase - Staging)
# ========================================
# Create a separate Supabase project for staging
DATABASE_URL="postgresql://postgres.[staging-project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres"
DIRECT_URL="postgresql://postgres.[staging-project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"

# ========================================
# AUTHENTICATION
# ========================================
NEXTAUTH_URL="https://staging.kindergarten-lime.vercel.app"
AUTH_SECRET="generate-different-secret-for-staging"

# Google OAuth (same or different app)
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""

# ========================================
# STRIPE (Test Mode)
# ========================================
# Use Stripe TEST keys for staging
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Test Price IDs
STRIPE_STARTER_PRICE_ID="price_test_..."
STRIPE_PROFESSIONAL_PRICE_ID="price_test_..."
STRIPE_ENTERPRISE_PRICE_ID="price_test_..."

# ========================================
# UPSTASH (Same or separate)
# ========================================
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""
QSTASH_TOKEN=""
QSTASH_CURRENT_SIGNING_KEY=""
QSTASH_NEXT_SIGNING_KEY=""

# ========================================
# OTHER SERVICES
# ========================================
RESEND_API_KEY=""
EMAIL_FROM="KinderCare Staging <staging@kindercare.app>"

SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# ========================================
# APP SETTINGS
# ========================================
NEXT_PUBLIC_APP_URL="https://staging.kindergarten-lime.vercel.app"
NODE_ENV="production"
